# Infrastructure Credentials (Used by Docker Compose)

# PostgreSQL (Used by User and Template Services)
POSTGRES_DB=distributed_database
POSTGRES_USER=shared_user
POSTGRES_PASS=shared_password

# RabbitMQ (Used by API Gateway, Email, and Push Services)
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# Microservice Configuration

# Service-to-Service API Keys (Used by User Service for validation)
# This MUST be the same list used in your user-service/application.properties.
SERVICE_AUTH_VALID_KEYS=API_KEY_EMAIL_SERVICE_123,API_KEY_PUSH_SERVICE_456,API_KEY_TEMPLATE_SERVICE_789